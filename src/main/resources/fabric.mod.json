{
  "schemaVersion": 1,
  "name": "Lodestar Suite",
  "id": "lodestar-suite",
  "version": "${version}",
  "description": "A comprehensive Minecraft utility suite with quality of life modules and tools for fair play compliance.",
  "authors": [
    "waythread"
  ],
  "contact": {
    "homepage": "https://github.com/waythread/lodestar-suite",
    "issues": "https://github.com/waythread/lodestar-suite/issues",
    "sources": "https://github.com/waythread/lodestar-suite"
  },
  "license": "GPL-3.0",
  "icon": "assets/lodestar-suite/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "meteordevelopment.meteorclient.MeteorClient"
    ],
    "modmenu": [
      "meteordevelopment.meteorclient.ModMenuIntegration"
    ]
  },
  "mixins": [
    "lodestar-suite.mixins.json",
    "lodestar-suite-indigo.mixins.json",
    "lodestar-suite-sodium.mixins.json",
    "lodestar-suite-lithium.mixins.json",
    "lodestar-suite-viafabricplus.mixins.json"
  ],
  "accessWidener": "lodestar-suite.accesswidener",
  "custom": {
    "lodestar-suite:build_number": "${build_number}",
    "lodestar-suite:color": "145,61,226",
    "lodestar-suite:commit": "${commit}",
    "modmenu": {
      "links": {
        "modmenu.discord": "https://github.com/waythread/lodestar-suite"
      }
    }
  },
  "depends": {
    "java": ">=21",
    "minecraft": ["${minecraft_version}", "1.21.7", "1.21.6"],
    "fabricloader": ">=${loader_version}"
  },
  "breaks": {
    "optifabric": "*",
    "feather": "*",
    "origins": "*",
    "sodium": "<0.6.12",
    "morechathistory": "*"
  }
}
